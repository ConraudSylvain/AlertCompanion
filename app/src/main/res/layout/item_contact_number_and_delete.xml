<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="5dp"
    tools:ignore="UseCompoundDrawables">

    <ImageView
        android:id="@+id/item_contact_number_and_delete_imageview_delete"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_delete"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="@string/contact" />

    <TextView
        android:id="@+id/item_contact_number_and_delete_textview_name_and_number"
        android:layout_gravity="center"
        android:textSize="@dimen/textSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"/>

</LinearLayout>